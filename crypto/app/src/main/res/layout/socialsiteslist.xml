<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#B6E4E0"
    tools:context=".social.socialdata"
        >

    <TextView

        android:id="@+id/wname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rank"


        android:layout_marginTop="4dp"

        android:fontFamily="sans-serif-black"
        android:text="CryptoName"
        android:textAllCaps="true"
        android:textColor="#131945"
        android:textSize="18dp"
        android:layout_marginLeft="34dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/wcrypto_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
          android:layout_marginLeft="8dp"
            android:src="@drawable/bits"
            android:scaleType="centerCrop"
            android:layout_marginTop="1dp"

            />


        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="90dp"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:weightSum="2"

        >

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center|start"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/card_shape">
<ImageView
    android:id="@+id/website1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/webimg"
    />
            <TextView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>




        </LinearLayout>


        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center|start"
            android:padding="3dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/card_shape">



            <ImageView
                android:id="@+id/github1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/githubic"
                />
            <TextView
                android:id="@+id/github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="1dp"
            android:weightSum="4"
            android:layout_gravity="end"

            >
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:orientation="vertical"
            android:gravity="center|start"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:background="@drawable/card_shape">

            <ImageView
                android:id="@+id/blog1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/vvvvv"
                />
            <TextView
                android:id="@+id/blog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center|start"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/card_shape">

            <ImageView
                android:id="@+id/discord1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/discordurl"
                />
            <TextView
                android:id="@+id/discord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="#EA0A0A"

android:text="---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"
>


    </TextView>
</LinearLayout>

