<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B6E4E0"
    tools:context=".displayinfo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
     >





        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/crypto_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/bits"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"

            />


        <TextView
            android:id="@+id/name"
            android:layout_below="@+id/rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:fontFamily="sans-serif-black"
            android:textAllCaps="true"
            android:text="CryptoName"
            android:textColor="#131945"
            android:textSize="23dp"
            android:layout_marginTop="20dp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/expense_shape"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="4"
            >

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center|start"
                android:padding="7dp"
                android:layout_weight="4"
                android:layout_margin="10dp"
                android:background="@drawable/card_shape">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="𝕮𝖚𝖗𝖗𝖊𝖓𝖙 𝖕𝖗𝖎𝖈𝖊"

                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/currentprice"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3123123.211565454"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="bold"

                    android:layout_gravity="center"
                    android:textColor="#291B77"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center|start"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_weight="0"
                android:layout_margin="7dp"
                android:background="@drawable/card_shape">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="𝕾𝖙𝖆𝖙𝖚𝖘"
                    android:textAlignment="center"

                    android:textStyle="bold"
                    android:textColor="@color/white"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_marginTop="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="bold"
                    android:textColor="#1B3202"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center|start"
                android:padding="7dp"
                android:layout_weight="3"
                android:layout_margin="10dp"
                android:background="@drawable/card_shape">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="𝕸𝖆𝖝 𝖕𝖗𝖎𝖈𝖊"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/maxprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2134241423"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="bold"
                    android:textColor="#2B2E10"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/expense_shape2"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="30dp"
                    android:background="@drawable/icon_card_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"

                        android:text="𝐂𝐮𝐫𝐫𝐞𝐧𝐜𝐲"
                        android:textAlignment="center"
                        android:textColor="#131945"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/currecy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:fontFamily="sans-serif-black"
                        android:text=" BTC "
                        android:textStyle="bold"
                        android:textColor="#1B290C"
                        android:textSize="25dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="30dp"
                    android:background="@drawable/icon_card_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:text="𝐌𝐚𝐫𝐤𝐞𝐭 𝐜𝐚𝐩"

                        android:textColor="#131945"

                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/marketcap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="1234242"
                        android:fontFamily="sans-black"
                        android:textColor="#2B2E10"
                        android:textSize="18dp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="147dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="28dp"
                    android:background="@drawable/icon_card_shape">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"

                        android:text="𝐌𝐚𝐱 𝐬𝐮𝐩𝐩𝐥𝐲"
                        android:textColor="#131945"
                        android:textSize="19dp"
                        />

                    <TextView
                        android:id="@+id/maxsupply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text=" "
                        android:fontFamily="saserif-black"
                        android:textColor="#32257A"
                        android:layout_marginTop="10dp"
                        android:textSize="17dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="148dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="30dp"
                    android:background="@drawable/icon_card_shape">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"

                        android:text="𝐄𝐱𝐜𝐡𝐚𝐧𝐠𝐞"
                        android:textColor="#131945"
                        android:textSize="20dp"

                        />

                    <TextView
                        android:id="@+id/exchange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="172176"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#2B2E10"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>